# Zathura config
# ~/.config/zathura/zathurarc

# --- General ---

# Layout
set window-title-basename "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 3

# Keybindings
map u scroll half-up 
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# --- Colors ---

set recolor true

set notification-error-bg       "#dc322f" # Dark Red
set notification-error-fg       "#001a1d" # Background
set notification-warning-bg     "#b58900" # Dark Yellow
set notification-warning-fg     "#001a1d" # Background
set notification-bg             "#001a1d" # Background
set notification-fg             "#a0b0b0" # Foreground

set completion-bg               "#001a1d" # Background
set completion-fg               "#a0b0b0" # Foreground
set completion-group-bg         "#001a1d" # Background
set completion-group-fg         "#a0b0b0" # Foreground
set completion-highlight-bg     "#b58900" # Dark Yellow
set completion-highlight-fg     "#162320" # Background

set index-bg                    "#001a1d" # Background
set index-fg                    "#a0b0b0" # Foreground
set index-active-bg             "#b58900" # Dark Yellow 
set index-active-fg             "#001a1d" # Background

set inputbar-bg                 "#001a1d" # Background
set inputbar-fg                 "#a0b0b0" # Foreground
set statusbar-bg                "#001a1d" # Background
set statusbar-fg                "#a0b0b0" # Foreground

set highlight-color             "#b58900" # Dark Yellow
set highlight-active-color      "#dc322f" # Dark Red 

set default-bg                  "#001a1d" # Background
set default-fg                  "#a0b0b0" # Foreground

set render-loading              true
set render-loading-fg           "#001a1d" # Background
set render-loading-bg           "#a0b0b0" # Foreground

set recolor-lightcolor          "#001a1d" # Background
set recolor-darkcolor           "#a0b0b0" # Foreground
