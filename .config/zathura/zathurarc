# Zathura config
# ~/.config/zathura/zathurarc

# --- General ---

# Layout
set window-title-basename "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 3

# Keybindings
map u scroll half-up 
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# --- Colors ---

set recolor true

set notification-error-bg       "#d16983" # Dark Red
set notification-error-fg       "#192330" # Background
set notification-warning-bg     "#e0c989" # Dark Yellow
set notification-warning-fg     "#192330" # Background
set notification-bg             "#192330" # Background
set notification-fg             "#bebebe" # Foreground

set completion-bg               "#192330" # Background
set completion-fg               "#bebebe" # Foreground
set completion-group-bg         "#192330" # Background
set completion-group-fg         "#bebebe" # Foreground
set completion-highlight-bg     "#e0c989" # Dark Yellow
set completion-highlight-fg     "#162320" # Background

set index-bg                    "#192330" # Background
set index-fg                    "#bebebe" # Foreground
set index-active-bg             "#e0c989" # Dark Yellow 
set index-active-fg             "#192330" # Background

set inputbar-bg                 "#192330" # Background
set inputbar-fg                 "#bebebe" # Foreground
set statusbar-bg                "#192330" # Background
set statusbar-fg                "#bebebe" # Foreground

set highlight-color             "#e0c989" # Dark Yellow
set highlight-active-color      "#d16983" # Dark Red 

set default-bg                  "#192330" # Background
set default-fg                  "#bebebe" # Foreground

set render-loading              true
set render-loading-fg           "#192330" # Background
set render-loading-bg           "#bebebe" # Foreground

set recolor-lightcolor          "#192330" # Background
set recolor-darkcolor           "#bebebe" # Foreground
