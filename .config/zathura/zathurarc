# Zathura config
# ~/.config/zathura/zathurarc

# --- General ---

# Layout
set window-title-basename "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 3

# Keybindings
map u scroll half-up 
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# --- Colors ---

set recolor true

set notification-error-bg       "#e67e80" # Dark Red
set notification-error-fg       "#272e33" # Background
set notification-warning-bg     "#dbbc7f" # Dark Yellow
set notification-warning-fg     "#272e33" # Background
set notification-bg             "#272e33" # Background
set notification-fg             "#d3c6aa" # Foreground

set completion-bg               "#272e33" # Background
set completion-fg               "#d3c6aa" # Foreground
set completion-group-bg         "#272e33" # Background
set completion-group-fg         "#d3c6aa" # Foreground
set completion-highlight-bg     "#dbbc7f" # Dark Yellow
set completion-highlight-fg     "#162320" # Background

set index-bg                    "#272e33" # Background
set index-fg                    "#d3c6aa" # Foreground
set index-active-bg             "#dbbc7f" # Dark Yellow 
set index-active-fg             "#272e33" # Background

set inputbar-bg                 "#272e33" # Background
set inputbar-fg                 "#d3c6aa" # Foreground
set statusbar-bg                "#272e33" # Background
set statusbar-fg                "#d3c6aa" # Foreground

set highlight-color             "#dbbc7f" # Dark Yellow
set highlight-active-color      "#e67e80" # Dark Red 

set default-bg                  "#272e33" # Background
set default-fg                  "#d3c6aa" # Foreground

set render-loading              true
set render-loading-fg           "#272e33" # Background
set render-loading-bg           "#d3c6aa" # Foreground

set recolor-lightcolor          "#272e33" # Background
set recolor-darkcolor           "#d3c6aa" # Foreground
