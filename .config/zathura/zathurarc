# Zathura config
# ~/.config/zathura/zathurarc

# --- General ---

# Layout
set window-title-basename "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 3

# Keybindings
map u scroll half-up 
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# --- Colors ---

set recolor true

set notification-error-bg       "#e06c75" # Dark Red
set notification-error-fg       "#282c34" # Background
set notification-warning-bg     "#e5c07b" # Dark Yellow
set notification-warning-fg     "#282c34" # Background
set notification-bg             "#282c34" # Background
set notification-fg             "#bbc2cf" # Foreground

set completion-bg               "#282c34" # Background
set completion-fg               "#bbc2cf" # Foreground
set completion-group-bg         "#282c34" # Background
set completion-group-fg         "#bbc2cf" # Foreground
set completion-highlight-bg     "#e5c07b" # Dark Yellow
set completion-highlight-fg     "#162320" # Background

set index-bg                    "#282c34" # Background
set index-fg                    "#bbc2cf" # Foreground
set index-active-bg             "#e5c07b" # Dark Yellow 
set index-active-fg             "#282c34" # Background

set inputbar-bg                 "#282c34" # Background
set inputbar-fg                 "#bbc2cf" # Foreground
set statusbar-bg                "#282c34" # Background
set statusbar-fg                "#bbc2cf" # Foreground

set highlight-color             "#e5c07b" # Dark Yellow
set highlight-active-color      "#e06c75" # Dark Red 

set default-bg                  "#282c34" # Background
set default-fg                  "#bbc2cf" # Foreground

set render-loading              true
set render-loading-fg           "#282c34" # Background
set render-loading-bg           "#bbc2cf" # Foreground

set recolor-lightcolor          "#282c34" # Background
set recolor-darkcolor           "#bbc2cf" # Foreground
