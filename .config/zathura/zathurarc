# Zathura config
# ~/.config/zathura/zathurarc

# --- General ---

# Layout
set window-title-basename "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 3

# Keybindings
map u scroll half-up 
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# --- Colors ---

set recolor true

set notification-error-bg       "#d16969" # Dark Red
set notification-error-fg       "#161616" # Background
set notification-warning-bg     "#dbc074" # Dark Yellow
set notification-warning-fg     "#161616" # Background
set notification-bg             "#161616" # Background
set notification-fg             "#e4e4e5" # Foreground

set completion-bg               "#161616" # Background
set completion-fg               "#e4e4e5" # Foreground
set completion-group-bg         "#161616" # Background
set completion-group-fg         "#e4e4e5" # Foreground
set completion-highlight-bg     "#dbc074" # Dark Yellow
set completion-highlight-fg     "#162320" # Background

set index-bg                    "#161616" # Background
set index-fg                    "#e4e4e5" # Foreground
set index-active-bg             "#dbc074" # Dark Yellow 
set index-active-fg             "#161616" # Background

set inputbar-bg                 "#161616" # Background
set inputbar-fg                 "#e4e4e5" # Foreground
set statusbar-bg                "#161616" # Background
set statusbar-fg                "#e4e4e5" # Foreground

set highlight-color             "#dbc074" # Dark Yellow
set highlight-active-color      "#d16969" # Dark Red 

set default-bg                  "#161616" # Background
set default-fg                  "#e4e4e5" # Foreground

set render-loading              true
set render-loading-fg           "#161616" # Background
set render-loading-bg           "#e4e4e5" # Foreground

set recolor-lightcolor          "#161616" # Background
set recolor-darkcolor           "#e4e4e5" # Foreground
