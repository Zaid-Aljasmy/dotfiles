return {
  "folke/tokyonight.nvim",
  lazy = false,
  priority = 1000,
  config = function()
    require("tokyonight").setup({
      style = "night",          -- valid options: storm, moon, night, day
      transparent = true,       -- transparent background
      terminal_colors = true,
      styles = {
        comments = {},
        keywords = {},
        functions = {},
        variables = {},
        sidebars = "transparent",
        floats = "transparent",
      },
      on_highlights = function(hl, c)
        hl.Normal = { bg = "NONE" }
        hl.NormalFloat = { bg = "NONE" }
        hl.Visual = { bg = "NONE", fg = "NONE" }

        -- Telescope adjustments
        hl.TelescopeNormal = { bg = "NONE" }
        hl.TelescopeBorder = { bg = "NONE" }
        hl.TelescopePromptNormal = { bg = "NONE" }
        hl.TelescopePromptBorder = { bg = "NONE" }

        -- Make selected item visible
        hl.TelescopeSelection = { bg = c.bg_highlight, fg = c.fg }
        hl.TelescopeSelectionCaret = { fg = c.blue }
      end,
    })
    vim.cmd("colorscheme tokyonight")
  end,
}


